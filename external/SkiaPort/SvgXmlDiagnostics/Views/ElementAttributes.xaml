<UserControl x:Class="SvgXmlDiagnostics.Views.ElementAttributes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SvgXmlDiagnostics.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ListBox ItemsSource="{Binding}" Grid.IsSharedSizeScope="True" Margin="2">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition SharedSizeGroup="Key" />
                        <ColumnDefinition SharedSizeGroup="Name" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Key}" Grid.Column="0" Margin="2" />
                    <TextBlock Text="{Binding Value}" Grid.Column="1" Margin="2" />
                </Grid>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
