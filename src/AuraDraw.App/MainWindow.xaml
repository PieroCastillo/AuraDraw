<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:my="https://github.com/PieroCastillo"
        Width="500" Height="450" Opacity="1"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="AuraDraw.App.MainWindow"
        WindowStartupLocation="CenterScreen"
        CanResize="False" 
        WindowState="Normal"
        Title="AuraDraw.App">
  <Window.Background>
    <my:AcrylicBrush Theme="Dark" TileMode="FlipXY"></my:AcrylicBrush>
  </Window.Background>
  <Window.Template>
    <ControlTemplate TargetType="Window">
      <Border Background="{TemplateBinding Background}">
        <ContentPresenter Content="{TemplateBinding Content}"></ContentPresenter>
      </Border>
    </ControlTemplate>
  </Window.Template>
  <Grid>
    <Grid>
      <TextBlock FontSize="60" Margin="50,40,0,0">AuraDraw</TextBlock>
      <TextBlock FontSize="30" Margin="300,115,0,0" Text="0.0.0.1"></TextBlock>
      <Button Name="openbtn" Content="open"/>
    </Grid>
  </Grid>
</Window>
