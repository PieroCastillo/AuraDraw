<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" x:Class="AuraDraw.App.Views.HomePage" >
	<Grid>
		<TextBlock Name="time_txt" FontSize="40" FontWeight="Bold"
				   Margin="50"></TextBlock>

		<TextBlock VerticalAlignment="Bottom"
				   HorizontalAlignment="Right" Margin="50,0,45,0">AuraDraw</TextBlock>
		<TextBlock Name="version_txt" 
				   VerticalAlignment="Bottom"
				   HorizontalAlignment="Right">0.0.0.1</TextBlock>
		<Grid>
			<TextBlock Margin="50,100,0,0" FontWeight="SemiBold"
					   FontSize="20">Qué desea hacer?</TextBlock>

			<Button Width="160" Height="50" VerticalAlignment="Bottom"
					HorizontalAlignment="Left"
					Margin="250,0,0,50">Crear un Documento</Button>
			<Button Width="155" Height="50" VerticalAlignment="Bottom"
					HorizontalAlignment="Left"
					Margin="50,0,0,50">Abrir un Documento</Button>
		</Grid>
		<Image Source="resm:AuraDraw.App.Assets.Logo.png" Opacity="150"
			   Width="200" VerticalAlignment="Bottom" HorizontalAlignment="Right"></Image>
	</Grid>
</UserControl>
