<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AuraDraw.App.App">
    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseDark.xaml"/>
        <StyleInclude Source="avares://Dock.Avalonia.Themes.Metro/DefaultTheme.xaml"/>
      <StyleInclude Source="avares://Jaya.Shared/Styles/StyledWindowStyle.xaml"/>
      <Style Selector="TemplatedControl">
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushGreen}"></Setter>
      </Style>
    </Application.Styles>
    <Application.Resources>
      <SolidColorBrush x:Key="BorderBrushGreen" Color="#00FF80"></SolidColorBrush>
    </Application.Resources>
</Application>
